<Page x:Class="Edicational_practice.Pages.AddSubjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Edicational_practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSubjectPage">

    <Grid>
        <StackPanel Margin="10,10,10,65">
            <Label Content="Код:" Width="300"/>
            <TextBox x:Name="CodeSubjectTextBox" Margin="0,5,0,5" Width="300"/>
            <Label Content="Объем:" Width="300"/>
            <TextBox x:Name="VolumeTextBox" Margin="0,5,0,5" Width="300"/>
            <Label Content="Дисциплина:" Width="300"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,5" Width="300"/>
            <Label Content="Исполнитель:" Width="300"/>
            <ComboBox x:Name="ExecutorCB" Margin="0,5,0,5" Width="300"/>
            <Button Content="Добавить" Click="AddButton_Click" Width="230" />
        </StackPanel>
    </Grid>
</Page>
