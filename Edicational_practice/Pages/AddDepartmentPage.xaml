<Page x:Class="Edicational_practice.Pages.AddDepartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Edicational_practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDepartmentPage">

    <Grid>
        <StackPanel Margin="10,65,10,10">
            <Label Content="Шифр:" Width="300"/>
            <TextBox x:Name="CipherTextBox" Margin="0,5,0,5" Width="300"/>
            <Label Content="Название кафедры:" Width="300"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,5" Width="300"/>
            <Label Content="Факультет:" Width="300"/>
            <ComboBox x:Name="FacultyCB"  Margin="0,5,0,5" Width="300"/>
            <Button Content="Добавить" Click="AddButton_Click" Margin="0,10,0,0" Width="230" />
        </StackPanel>
    </Grid>
</Page>
